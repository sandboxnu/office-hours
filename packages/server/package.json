{
  "name": "@koh/server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --webpack --webpackPath webpack.config.js",
    "dev": "cross-env TYPEORM_LOGGING=true nest build --webpack --webpackPath webpack-hmr.config.js",
    "dev:debug": "nest start --debug --watch",
    "prod:start": "node --max-old-space-size=8192 dist/main",
    "tsc": "tsc",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest -i",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest --config ./test/jest-integration.json -i",
    "dev:db:reset": "yarn typeorm schema:drop",
    "migration:generate": "yarn typeorm schema:drop && yarn typeorm migration:run && yarn typeorm migration:generate",
    "typeorm": "cross-env TYPEORM_CLI=true ts-node ../../node_modules/typeorm/cli.js",
    "cli": "nestjs-command"
  },
  "dependencies": {
    "@koh/common": "*",
    "@nestjs/common": "^7.4.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.0",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.4.0",
    "@nestjs/schedule": "^0.4.0",
    "@nestjs/typeorm": "^7.1.0",
    "@sentry/node": "^5.22.3",
    "@sentry/tracing": "^5.22.3",
    "@types/bcrypt": "^3.0.0",
    "async": "^3.2.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "elastic-apm-node": "^3.6.1",
    "lodash": "^4.17.19",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.31",
    "morgan": "^1.10.0",
    "nestjs-admin": "^0.4.0",
    "nestjs-command": "^1.5.0",
    "node-ical": "^0.11.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.2.1",
    "readline-sync": "^1.4.10",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rrule": "^2.6.6",
    "rxjs": "^6.5.4",
    "source-map-support": "^0.5.19",
    "twilio": "^3.47.0",
    "typeorm": "^0.2.25",
    "web-push": "^3.4.4",
    "windows-iana": "^4.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.0",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.4.0",
    "@types/async": "^3.2.3",
    "@types/express": "^4.17.3",
    "@types/jest": "25.2.3",
    "@types/lodash": "^4.14.157",
    "@types/node": "^13.9.1",
    "@types/passport-jwt": "^3.0.3",
    "@types/readline-sync": "^1.4.3",
    "@types/supertest": "^2.0.8",
    "@types/web-push": "^3.3.0",
    "cross-env": "^7.0.2",
    "jest": "26.0.1",
    "prettier": "^1.19.1",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.3",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typeorm-factory": "^0.0.14",
    "typescript": "^4.0.0",
    "webpack-node-externals": "^2.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
