{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "strictPropertyInitialization": false,
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules"]
}
