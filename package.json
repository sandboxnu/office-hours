{
  "name": "node-fullstack-websocket",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "rimraf node_modules/@types/react-native",
    "cypress:run": "npx cypress run",
    "cypress:open": "npx cypress open",
    "cli": "yarn workspace @template/server cli",
    "dev": "concurrently -n \"server,app,proxy\" \"yarn workspace @template/server dev\" \"yarn workspace @template/app dev\" \"yarn dev:proxy\"",
    "dev:proxy": "node infrastructure/dev/devProxy.js",
    "tsc": "yarn workspaces run tsc",
    "lint": "eslint packages/ --ext .ts,.tsx --ignore-path .gitignore",
    "test": "yarn workspace @template/app test; yarn workspace @template/server test",
    "dev:db:up": "docker-compose -f infrastructure/dev/docker-compose.yml up -d && yarn dev:db:seed",
    "dev:db:down": "docker-compose -f infrastructure/dev/docker-compose.yml down",
    "dev:db:seed": "yarn workspace @template/server dev:db:seed",
    "dev:db:reset": "yarn workspace @template/server run dev:db:reset",
    "build": "yarn workspace @template/server run build && yarn workspace @template/app run build",
    "prod:start": "pm2 start ./infrastructure/prod/ecosystem.config.js",
    "prod:stop": "pm2 del ./infrastructure/prod/ecosystem.config.js",
    "deploy": "pm2 deploy infrastructure/prod/ecosystem.config.js"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "concurrently": "^5.2.0",
    "express": "^4.17.1",
    "http-proxy-cli": "^2.1.0",
    "http-proxy-middleware": "^1.0.3",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ]
  },
  "dependencies": {
    "pm2": "^4.4.0",
    "rimraf": "^3.0.2"
  }
}
